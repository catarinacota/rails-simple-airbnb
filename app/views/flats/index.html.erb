<h1>All our Flats</h1>

<p>You searched for . We found <%= @flats.count %> flats out of <%= @flats.count %></p>

<div class="row">

  <% @flats.each do |flat| %>

  <div class="col-xs-4">
    <div class="cards">
      <div class="card">
        <div class="card-image" style="background-image: url('https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200')"></div>
        <div class="card-body">
          <h4><%= flat.name %></h4>
          <p><%= flat.address %></p>
          <div class="card-body-details">
            <p><%= flat.price_per_night %></p>
            <p><%= flat.number_of_guests %></p>
          </div>
        </div>
        <div class="card-footer">
          <div class="card-info">
            <%= link_to 'More info' %>
            <%= link_to 'Edit' %>
            <%= link_to 'Remove' %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% end %>
</div>
